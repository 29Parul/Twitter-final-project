<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/tweet2"
                android:layout_height="match_parent">
    <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
        <TextView
                android:text="Please input a search request"
            android:textColor="@color/textcolour"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_search_tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro_txt"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:cursorVisible="true"
            android:background="@color/textcolour"
            android:hint="Type your search query here"
            android:inputType="text"
            android:padding="10dp" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/search_edit"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:onClick="searchTwitter"
            android:text="SEARCH" />
    </LinearLayout>
</RelativeLayout>